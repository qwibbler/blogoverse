<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-div">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "Name", :class => "sketchy" %>
  </div>

  <div class="form-div">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "sketchy" %>
  </div>

  <div class="form-div">
    <%= f.label :photo %><br />
    <%= f.text_field :photo, autofocus: true, autocomplete: "photo", :class => "sketchy" %>
  </div>

  <div class="form-div">
    <%= f.label :bio %><br />
    <%= f.text_area :bio, autofocus: true, autocomplete: "bio", :class => "sketchy" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-div">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", :class => "sketchy" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="form-div">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "sketchy" %>
  </div>

  <div class="form-div">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", :class => "sketchy" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", :class => "sketchy" %>
  </div>
<% end %>

<h3>Cancel my account</h3>
<div class="form-div">
  <p>Unhappy?
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "btn sketchy" %>
  </p>
</div>

<%= link_to "Back", :back %>
