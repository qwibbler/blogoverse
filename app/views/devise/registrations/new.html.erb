<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-div">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: "Name", :class => "sketchy" %>
  </div>

  <div class="form-div">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "sketchy" %>
  </div>

  <div class="form-div">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <i>(<%= @minimum_password_length %> characters minimum)</i>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", :class => "sketchy" %>
  </div>

  <div class="form-div">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "sketchy" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class => "sketchy" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
